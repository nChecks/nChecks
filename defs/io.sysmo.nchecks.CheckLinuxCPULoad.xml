<NChecks xmlns="http://schemas.sysmo.io/2015/NChecks">
    <Check
        Id="io.sysmo.nchecks.CheckLinuxCPULoad"
        Version="1.0"
        Class="io.sysmo.nchecks.checks.CheckLinuxCPULoad">

        <Author><![CDATA[Sebastien Serre (ssbx@sysmo.io)]]></Author>
        <AuthorUrl>http://www.sysmo.io</AuthorUrl>
        <UpdatesUrl>http://www.sysmo.io/nchecks/updates/CheckLinuxCPULoad/</UpdatesUrl>

        <Description>CheckLinuxCPULoad raise a CRITICAL or WARNING alert if interfaces errors exceed thresholds.</Description>
        <Overview> </Overview>

        <Require Ressource="snmp" />

        <FlagTable>
            <Flag Id="warning_threshold">
                <Hint>Integer representing an average load minute.</Hint>
                <Usage>Set the probe to WARNING state the load exceed "warning_threshold"</Usage>
                <Default>80</Default>
            </Flag>
            <Flag Id="critical_threshold">
                <Hint>Integer representing an average number of error per minute.</Hint>
                <Usage>Set the probe to WARNING state the load exceed "warning_threshold"</Usage>
                <Default>100</Default>
            </Flag>
        </FlagTable>

        <Performances Type="simple" >
            <FileName>CheckLinuxCPULoad.rrd</FileName>
            <DataSourceTable>
                <DataSource Id="cpuLoad1mn"       Type="GAUGE" />
                <DataSource Id="cpuLoad5mn"       Type="GAUGE" />
                <DataSource Id="cpuLoad20mn"      Type="GAUGE" />
            </DataSourceTable>
            <GraphTable>
                <Graph
                    Id="CPULoad"
                    Minimum="0"
                    Maximum=""
                    Rigid="false"
                    Base="1000"
                    Unit=""
                    UnitExponent="0" >
                    <Title>CPU Load</Title>
                    <VerticalLabel>Load</VerticalLabel>
                    <Draw
                        Type="area"
                        DataSource="cpuLoad1mn"
                        Consolidation="MAX"
                        Color="#204A87AA" >
                        Max load over 1 minute
                    </Draw>
                    <Draw
                        Type="area"
                        DataSource="cpuLoad5mn"
                        Consolidation="AVERAGE"
                        Color="#20ff87AA" >
                        Average load over 5 minute
                    </Draw>
                    <Draw
                        Type="area"
                        DataSource="cpuLoad5mn"
                        Consolidation="MIN"
                        Color="#ff4A87AA" >
                        Minimum load over 20 minute
                    </Draw>
                </Graph>
            </GraphTable>
        </Performances>
    </Check>
</NChecks>
